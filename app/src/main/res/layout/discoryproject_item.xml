<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.shixian.android.client.views.FontTextView
            android:textColor="#005580"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/tv_title"
            android:layout_marginLeft="@dimen/global_left"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            />






        <Button
            android:minWidth="88dp"

            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:singleLine="true"
            android:id="@+id/bt_fllowen"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="关注"
            android:textColor="@color/white"
            android:background="@drawable/shape_follow"
            android:padding="3dp"
            style="?android:attr/borderlessButtonStyle"
            android:paddingBottom="0dp"
            />

        </RelativeLayout>

    <com.shixian.android.client.views.FontTextView
        android:lineSpacingMultiplier="1.3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_content"
        android:textSize="15sp"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/content_top"
        android:layout_marginLeft="@dimen/global_left"
        android:layout_marginRight="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/main_content_top"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#E5E5E5"
        />


</LinearLayout>