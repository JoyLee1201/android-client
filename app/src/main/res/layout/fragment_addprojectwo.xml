<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.shixian.android.client.views.FontTextView
        android:layout_marginLeft="@dimen/global_left"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginRight="@dimen/global_left"
        android:layout_gravity="center_vertical"
        android:text="选择你的角色"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/global_left"

        />
  <ListView

      android:id="@+id/lv_admin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:divider="@null"
      >

      </ListView>


    <com.shixian.android.client.views.FontTextView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/global_left"
        android:layout_marginRight="@dimen/global_left"
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="如果有足够的热情和能力推动项目执行,请选择负责人。如果不打算承担领导责任,请选择非负责人,负责人的角色将公开竞选"
        android:textColor="#666666"
        android:lineSpacingMultiplier="1.3"


        />


</LinearLayout>