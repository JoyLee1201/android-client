<LinearLayout
    android:id="@+id/ll_addproject"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

    <ImageView
        android:src="@drawable/ic_create_grey600_24dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/menu_ic_margin_left"
        />

    <TextView
        android:textSize="@dimen/menu_tv_sp"
        android:layout_marginLeft="@dimen/menu_tv_margin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_project"
        />

    <TextView
        android:id="@+id/tv_caogao"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/menu_tv_margin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/caogao"
        android:visibility="gone"
        />
    </LinearLayout>

</LinearLayout>


